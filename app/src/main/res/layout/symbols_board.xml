<?xml version="1.0" encoding="utf-8"?>
<com.galagidae.keyxote.SymbolsBoard
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/symbol_row_scroll"
    android:layout_width="match_parent"
    android:layout_height="@dimen/entry_height">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/symbol1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/key_size"
            android:orientation="horizontal">

            <com.galagidae.keyxote.Key
                android:layout_width="@dimen/key_size"
                android:layout_height="@dimen/key_size"
                app:baseChar="`"
                app:shiftChar="~" />

            <com.galagidae.keyxote.Key
                android:layout_width="@dimen/key_size"
                android:layout_height="@dimen/key_size"
                app:baseChar="!"
                app:shiftChar="¡" />

            <com.galagidae.keyxote.Key
                android:layout_width="@dimen/key_size"
                android:layout_height="@dimen/key_size"
                app:baseChar="?"
                app:shiftChar="¿" />

            <com.galagidae.keyxote.Key
                android:layout_width="@dimen/key_size"
                android:layout_height="@dimen/key_size"
                app:baseChar="£"
                app:shiftChar="¥" />

            <com.galagidae.keyxote.Key
                android:layout_width="@dimen/key_size"
                android:layout_height="@dimen/key_size"
                app:baseChar="€"
                app:shiftChar="¢" />

            <com.galagidae.keyxote.Key
                android:layout_width="@dimen/key_size"
                android:layout_height="@dimen/key_size"
                app:baseChar="-"
                app:shiftChar="_" />

            <com.galagidae.keyxote.Key
                android:layout_width="@dimen/key_size"
                android:layout_height="@dimen/key_size"
                app:baseChar="="
                app:shiftChar="+" />

            <com.galagidae.keyxote.Key
                android:layout_width="@dimen/key_size"
                android:layout_height="@dimen/key_size"
                app:baseChar="π"
                app:shiftChar="∞" />

            <com.galagidae.keyxote.Key
                android:layout_width="@dimen/key_size"
                android:layout_height="@dimen/key_size"
                app:baseChar="÷"
                app:shiftChar="×" />

            <com.galagidae.keyxote.Key
                android:layout_width="@dimen/key_size"
                android:layout_height="@dimen/key_size"
                app:baseChar="…"
                app:shiftChar="¶" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/symbol2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/key_size"
            android:orientation="horizontal">

            <com.galagidae.keyxote.Key
                android:layout_width="@dimen/key_size"
                android:layout_height="@dimen/key_size"
                app:baseChar=":"
                app:shiftChar=";" />

            <com.galagidae.keyxote.Key
                android:layout_width="@dimen/key_size"
                android:layout_height="@dimen/key_size"
                app:baseChar="'"
                app:shiftChar='"' />

            <com.galagidae.keyxote.Key
                android:layout_width="@dimen/key_size"
                android:layout_height="@dimen/key_size"
                app:baseChar="&lt;"
                app:shiftChar="©" />

            <com.galagidae.keyxote.Key
                android:layout_width="@dimen/key_size"
                android:layout_height="@dimen/key_size"
                app:baseChar="&gt;"
                app:shiftChar="®" />

            <com.galagidae.keyxote.Key
                android:layout_width="@dimen/key_size"
                android:layout_height="@dimen/key_size"
                app:baseChar="ø"
                app:shiftChar="™" />

            <com.galagidae.keyxote.Key
                android:layout_width="@dimen/key_size"
                android:layout_height="@dimen/key_size"
                app:baseChar="\\"
                app:shiftChar="|" />

            <com.galagidae.keyxote.Key
                android:layout_width="@dimen/key_size"
                android:layout_height="@dimen/key_size"
                app:baseChar="["
                app:shiftChar="{" />

            <com.galagidae.keyxote.Key
                android:layout_width="@dimen/key_size"
                android:layout_height="@dimen/key_size"
                app:baseChar="]"
                app:shiftChar="}" />

            <com.galagidae.keyxote.Key
                android:layout_width="@dimen/key_size"
                android:layout_height="@dimen/key_size"
                app:baseChar="–"
                app:shiftChar="—" />

            <com.galagidae.keyxote.Key
                android:layout_width="@dimen/key_size"
                android:layout_height="@dimen/key_size"
                app:baseChar="°"
                app:shiftChar="•" />
        </LinearLayout>
    </LinearLayout>

</com.galagidae.keyxote.SymbolsBoard>
