<?xml version="1.0" encoding="utf-8"?>
<com.galagidae.keyxote.KeyboardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/keyboard"
    android:layout_alignParentBottom="true"
    android:paddingTop="0dp"
    android:layout_marginTop="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark">

    <com.galagidae.keyxote.RowScrollView
        android:id="@+id/row_scroll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/key_size">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/row_one"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/key_size"
                    android:orientation="horizontal">

                    <com.galagidae.keyxote.Key
                        android:id="@+id/id_q"
                        android:layout_width="@dimen/key_size"
                        android:layout_height="@dimen/key_size"
                        app:keyCode="113" />

                    <com.galagidae.keyxote.Key
                        android:layout_width="@dimen/key_size"
                        android:layout_height="@dimen/key_size"
                        app:keyCode="119" />

                    <com.galagidae.keyxote.Key
                        android:layout_width="@dimen/key_size"
                        android:layout_height="@dimen/key_size"
                        app:keyCode="101" />

                    <com.galagidae.keyxote.Key
                        android:layout_width="@dimen/key_size"
                        android:layout_height="@dimen/key_size"
                        app:keyCode="114" />

                    <com.galagidae.keyxote.Key
                        android:layout_width="@dimen/key_size"
                        android:layout_height="@dimen/key_size"
                        app:keyCode="116" />

                    <com.galagidae.keyxote.Key
                        android:layout_width="@dimen/key_size"
                        android:layout_height="@dimen/key_size"
                        app:keyCode="121" />
                    <com.galagidae.keyxote.Key
                        android:layout_width="@dimen/key_size"
                        android:layout_height="@dimen/key_size"
                        app:keyCode="117" />
                    <com.galagidae.keyxote.Key
                        android:layout_width="@dimen/key_size"
                        android:layout_height="@dimen/key_size"
                        app:keyCode="105" />
                    <com.galagidae.keyxote.Key
                        android:layout_width="@dimen/key_size"
                        android:layout_height="@dimen/key_size"
                        app:keyCode="111" />
                    <com.galagidae.keyxote.Key
                        android:layout_width="@dimen/key_size"
                        android:layout_height="@dimen/key_size"
                        app:keyCode="112" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/row_two"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <com.galagidae.keyxote.Key
                        android:layout_width="@dimen/key_size"
                        android:layout_height="@dimen/key_size"
                        android:width="@dimen/key_size"
                        app:keyCode="97" />

                    <com.galagidae.keyxote.Key
                        android:layout_width="@dimen/key_size"
                        android:layout_height="@dimen/key_size"
                        app:keyCode="115" />

                    <com.galagidae.keyxote.Key
                        android:layout_width="@dimen/key_size"
                        android:layout_height="@dimen/key_size"
                        app:keyCode="100" />

                    <com.galagidae.keyxote.Key
                        android:layout_width="@dimen/key_size"
                        android:layout_height="@dimen/key_size"
                        app:keyCode="102" />

                    <com.galagidae.keyxote.Key
                        android:layout_width="@dimen/key_size"
                        android:layout_height="@dimen/key_size"
                        app:keyCode="103" />

                    <com.galagidae.keyxote.Key
                        android:layout_width="@dimen/key_size"
                        android:layout_height="@dimen/key_size"
                        app:keyCode="104" />

                    <com.galagidae.keyxote.Key
                        android:layout_width="@dimen/key_size"
                        android:layout_height="@dimen/key_size"
                        app:keyCode="106" />

                    <com.galagidae.keyxote.Key
                        android:layout_width="@dimen/key_size"
                        android:layout_height="@dimen/key_size"
                        app:keyCode="107" />

                    <com.galagidae.keyxote.Key
                        android:layout_width="@dimen/key_size"
                        android:layout_height="@dimen/key_size"
                        app:keyCode="108" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/row_three"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <com.galagidae.keyxote.Key
                        android:layout_width="@dimen/key_size"
                        android:layout_height="@dimen/key_size"
                        android:width="@dimen/key_size"
                        app:keyCode="122" />

                    <com.galagidae.keyxote.Key
                        android:layout_width="@dimen/key_size"
                        android:layout_height="@dimen/key_size"
                        app:keyCode="120" />

                    <com.galagidae.keyxote.Key
                        android:layout_width="@dimen/key_size"
                        android:layout_height="@dimen/key_size"
                        app:keyCode="99" />

                    <com.galagidae.keyxote.Key
                        android:layout_width="@dimen/key_size"
                        android:layout_height="@dimen/key_size"
                        app:keyCode="118" />

                    <com.galagidae.keyxote.Key
                        android:layout_width="@dimen/key_size"
                        android:layout_height="@dimen/key_size"
                        app:keyCode="98" />

                    <com.galagidae.keyxote.Key
                        android:layout_width="@dimen/key_size"
                        android:layout_height="@dimen/key_size"
                        app:keyCode="110" />

                    <com.galagidae.keyxote.Key
                        android:layout_width="@dimen/key_size"
                        android:layout_height="@dimen/key_size"
                        app:keyCode="109" />

                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>
    </com.galagidae.keyxote.RowScrollView>
    <Button
        android:id="@+id/switchBoard"
        android:layout_width="100dp"
        android:backgroundTint="@android:color/black"
        android:layout_height="match_parent"
        android:text="Switch"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/key_size"
        android:orientation="horizontal">

        <Button
            android:id="@+id/row_up"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="Up" />

        <Button
            android:id="@+id/row_down"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="Down" />
    </LinearLayout>
    <Button
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/shift"
        android:text="Shift" />

</com.galagidae.keyxote.KeyboardView>
